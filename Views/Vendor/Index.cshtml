                        { "width": "70px", "targets": 6 },
                        { "width": "70px", "targets": 7 },
                        { "width": "70px", "targets": 8 },
                       // { "width": "70px", "targets": 9 }
                      ],
                "bPaginate": false,
                "bFilter": false,
                "stripeClasses": [],
                "ordering": false,
                "ordering": false,
                "info": false,
                "bInfo": false,
